<HomePage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source:"icones/Fundo_Aries.png"
        Label:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source:"icones/botao_fino.png"
            pos_hint:{"right":0.85, "top":0.95}
            size_hint: 0.7, 0.2
            bold: True
            text:"Total gasto no mÃªs:"
            id:id_total_gasto
            markup: True

        ScrollView:
            pos_hint:{"right":1, "top":0.75}
            size_hint: 1,0.63
            GridLayout:
                cols: 1
                id: lista_abastecimento
                size_hint_y: None
                spacing: 1, 1
                height: self.minimum_height
                row_default_height: "50dp"
                row_force_default: True

        GridLayout:
            rows:1
            pos_hint:{"right":1, "top":0.12}
            size_hint:1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                source: "icones/bomba_gas.png"
                on_release: app.mudar_tela("cadastrarabastecimentopage")
            ImageButton:
                source: "icones/carro.png"
                on_release: app.mudar_tela("cadastrarveiculopage")
            ImageButton:
                source: "icones/settings.png"
                on_release: app.mudar_tela("configpage")