<ConfigPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source:"icones/Fundo_Aries.png"
        Label:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source:"icones/botao_fino.png"
            pos_hint:{"right":0.85, "top":1}
            size_hint: 0.7, 0.2
            bold: True
            text:"Seu e-mail: "
            id:id_usuario

        ImageButton:
            pos_hint:{"right": 0.5, "top": 0.7}
            size_hint: 0.5,0.15
            source: "icones/foto_perfil.png"
            on_release: app.mudar_tela("mudarfotopage")
        LabelButton:
            pos_hint: {"right": 0.9, "top":0.7}
            size_hint: 0.5,0.15
            text: "Mudar Foto de Perfil"
            on_release: app.mudar_tela("mudarfotopage")

        ImageButton:
            pos_hint:{"right": 0.5, "top": 0.5}
            size_hint: 0.5,0.15
            source: "icones/adicionar_vendedor.png"
            on_release: app.mudar_tela("cadastrarveiculopage")
        LabelButton:
            pos_hint: {"right": 0.9, "top":0.5}
            size_hint: 0.5,0.15
            text: "Cadastrar Veiculo"
            on_release:app.mudar_tela("cadastrarveiculopage")

        ImageButton:
            pos_hint:{"right": 0.5, "top": 0.3}
            size_hint: 0.5,0.15
            source: "icones/salesman.png"
            on_release: app.mudar_tela("relatorioabastecimento")
        LabelButton:
            pos_hint: {"right": 0.9, "top":0.3}
            size_hint: 0.5,0.15
            text: "Relatorio de Abastecimento"
            on_release:  app.mudar_tela("relatorioabastecimento")
        FloatLayout:
            pos_hint:{"right":1, "top":0.12}
            size_hint:1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint:{"right":0.2, "top":0.9}
                size_hint:0.2, 0.8
                source: "icones/voltar.png"
                text:"voltar"
                on_release: app.mudar_tela("homepage")