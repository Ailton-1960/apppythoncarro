<MudarFotoPage>
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source:"icones/Fundo_Aries.png"
        Label:
            pos_hint:{"right": 0.85, "top":1}
            size_hint: 0.7, 0.2
            bold: True
            text:"Selecione sua Foto de Perfil"

        ScrollView:
            pos_hint:{"right":0.9, "top":0.85}
            size_hint:0.8, 0.6
            GridLayout:
                cols: 3
                id: lista_foto_perfil
                size_hint_y: None
                spacing: 5, 5
                height: self.minimum_height
                row_default_height: "50dp"
                row_force_default: True

        FloatLayout:
            pos_hint:{"right":1, "top":0.12}
            size_hint:1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#006D7E")
                Rectangle:
                    size: self.size
                    pos: self.pos
            ImageButton:
                pos_hint:{"right":0.2, "top":0.9}
                size_hint:0.2, 0.8
                source: "icones/voltar.png"
                text:"voltar"
                on_release: app.mudar_tela("configpage")