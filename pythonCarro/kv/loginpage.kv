<LoginPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/Fundo_Aries.png"
        Label:
            text: "CONTROLE DE [color=#00CFDB]CONSUMO[/color]"
            bold:True
            markup:True
            pos_hint:{"right": 0.9,"top":1}
            size_hint:0.8, 0.2

        TextInput:
            id: email
            hint_text: "E-mail"
            pos_hint: {"right": 0.9, "top":0.7}
            size_hint: 0.8, 0.1
        TextInput:
            id: senha
            password: True
            hint_text: "Senha"
            pos_hint: {"right":0.9, "top":0.55}
            size_hint: 0.8, 0.1

        Label:
            id: menssagem_login
            text: "[color=#00CFDB]Faça seu Login ![/color]"
            bold: True
            markup: True
            pos_hint: {"right":0.9, "top":0.4}
            size_hint: 0.8, 0.1
        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source:"icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release: app.loginsenha.fazer_login(email.text, senha.text)
            text: "Faça login"
            pos_hint: {"right":0.45, "top":0.3}
            size_hint: 0.4, 0.2

        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source:"icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            on_release:  app.loginsenha.criar_conta(email.text, senha.text)
            text: "Criar uma Conta"
            pos_hint: {"right":0.95, "top":0.3}
            size_hint: 0.4, 0.2
